
@{
    IntranetTransacciones transaccion = new IntranetTransacciones();
    transaccion = ViewBag.transaccion;

    IEnumerable<IntranetTransaccionesDetalle> transaccionesDetalles = ViewBag.detalleTransaccion;

    ViewData["Title"] = "EdicionTransacciones";

    int numero = 0;
}

<div class="container col-12">

    <div class="card">
        <div class="card-body">
            
            <h5 class="card-title">
                Detalle de la Transaccion N° @transaccion.IdTransacciones
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">
                Monto: s/@transaccion.MontoTotal
            </h6>

            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Monto</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in transaccionesDetalles)
                    {
                        numero++;

                        <tr>
                            <th scope="row">@numero</th>
                            <td>@item.Descripcion</td>
                            <td>@item.Monto</td>
                            <td>
                                <a class="btn btn-outline-primary" onclick="_eliminarDetalle(@item.IdTransacciones, @item.IdTransaccionesDetalle)">

                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                    </svg>


                                </a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>


</div>

