@model IEnumerable<EditarTransacciones>
@{
    ViewData["Title"] = "BusquedaTransacciones";
    PersonaPersona persona = new PersonaPersona();
    persona = ViewBag.persona;
    int contador = 1;
}

<div id="segundoComponenteparcial">

    <div class="col-12 row">
        <div class="col-4">
            <div class="mb-3">
                <label for="codigoAlumno" class="form-label">Id Alumno</label>
                <input type="text" class="form-control" value="@persona.IdPersona" id="codigoAlumno" disabled>
            </div>

        </div>
        <div class="col-8">
            <div class="mb-3">
                <label for="nombres" class="form-label">Apellidos y Nombres</label>
                <input type="text" class="form-control" value="@persona.Name" id="nombres" disabled>
            </div>

        </div>

    </div>


    <div class="col-12 row">

        <div class="col-6">

            <div class="col-12" style="padding-top:2em;">
               
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tipo Pago</th>
                            <th scope="col">Fecha </th>
                            <th scope="col">Hora</th>
                            <th scope="col">Monto</th>
                            <th scope="col">Periodo</th>
                            <th scope="col">Editar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@contador</th>
                                <td>@item.tipoPago</td>
                                <td>@item.fechaEnvio</td>
                                <td>@item.horaEnvio</td>
                                <td>@item.monto</td>
                                <td>@item.periodo</td>
                                @if (item.eliminar)
                                {
                                    <td>

                                        <a class="btn btn-danger" onclick="_editarTransaccion(@item.IdTransacciones)" >
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                            </svg>


                                        </a>

                                    </td>
                                }else{
                                    <td></td>
                                }

                            </tr>


                            contador++;
                        }
                       
                      
                    </tbody>
                </table>


            </div>

        </div>
        <div class="col-6">

            <div class="col-12" style="padding-top:2em;">
                <div class="listaDetalleTransacciones" id="listaDetalleTransacciones" style="display:none">
                </div>
            </div>

        </div>

    </div>




</div>


