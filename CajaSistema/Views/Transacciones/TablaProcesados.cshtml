@model List<CajaTransaccionPagados>
@{
    ViewData["Title"] = "TablaProcesados";
    int contador = 1;
}

<div class="container mt-3">
    <div class="row">

        @* <h1>Vouchers Pendientes para el periodo</h1> *@

        @* <div class="col-4 mb-3">
            <a class="btn btn-primary" onclick="recargarTabla()"> Actualizar Tabla</a>
        </div>
        <div class="col-4 mb-3"></div>
        <div class="col-4 mb-3"></div> *@

        <div class="col-12">
            <table class="table table-hover" id="tablaTransaciconesProcesadas">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">IdPago</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Fecha Pago</th>
                        <th scope="col">Hora</th>
                        <th scope="col">Monto</th>
                        <th scope="col">DNI</th>
                        <th scope="col">Nombre Completo</th>

                        @* <th scope="col">Modalidad</th>
                        <th scope="col">Curso</th>
                        <th scope="col">Frecuencia - Horario</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@contador</th>
                            <td>@item.IdTransaccionesPagadas</td>
                            @if (item.tipoPago == "MATRICULA")
                            {
                                <td> <span class="badge text-bg-primary">Matricula</span> </td>
                            }
                            else
                            {
                                <td> <span class="badge text-bg-info">Otro</span></td>
                            }

                            <td>@item.FechaTransaccion</td>
                            <td>@item.HoraTransaccion</td>
                            <td>@item.Monto</td>
                            <td>@item.DNI</td>
                            <td>@item.NombreCompleto</td>
                         

                        </tr>
                        contador++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

