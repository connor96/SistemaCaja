@model IEnumerable<TablaConceptosLibres>
@{
    ListaPeriodo periodo = ViewBag.Periodo;
    ViewData["Title"] = "TablaConceptos";
    int contador = 1;
}

<div class="container row">
    <div class="col-8">
        <h4>Lista conceptos libres registrados - @periodo.periodoDescripcion </h4>
    </div>
    @* 
    <div class="col-4">
        <input type="button" class="btn btn-danger" id="_botonUbicacionAgregar" value="Agregar alumno" onclick="agregarUbicacion('@periodo.periodoTexto','@sede.IdSede')" />
    </div> *@

    <div class="col-12">
        <table class="table table-hover" id="tablaConceptoLibre">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id Alumno</th>
                    <th scope="col">Nombres Completos</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Monto</th>
                    <th scope="col">Sede</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Eliminar</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@contador</th>
                        <td>@item.idPersona</td>
                        <td>@item.nombres</td>
                        <td>@item.descripcion</td>
                        <td>@item.monto</td>
                        <td>@item.sede</td>
                        @if (item.estado == 1)
                        {
                            <td> <span class="badge text-bg-primary">Registrado</span> </td>
                            <td>
                                <a class="btn btn-outline-danger" onclick="eliminarConceptoLibre('@item.idConceptosLibres')" disabled>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                                    </svg>
                                </a>
                            </td>
                           
                        }
                        else if (item.estado == 2)
                        {
                            <td> <span class="badge text-bg-warning">Pagado</span></td>
                            <td>  </td>

                        }
                        

                    </tr>
                    contador++;
                }

            </tbody>
        </table>
    </div>



</div>



