@using Microsoft.AspNetCore.Identity
@model UserIdentity;
@{
    ViewData["Title"] = "modalRegister";
    IEnumerable<IdentityRole> roles = ViewBag.roles;
}



<div class="modal-content">
    <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Detalle del Pago</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card" style="padding:2rem;">
                        <h4>Editar valores de: @Model.aPaterno @Model.aMaterno @Model.nombres1 @Model.nombres2</h4>

                        <form>
                            <div class="mb-3">
                                <label for="idAlumno" class="form-label">IdPersona</label>
                                <input type="text" class="form-control" id="idAlumno" aria-describedby="emailHelp" value="@Model.idPersona" disabled>
                            </div>
@* 
                            <div class="mb-3">
                                <label for="nombres" class="form-label">Nombres y Apellidos</label>
                                <input type="text" class="form-control" id="nombres" aria-describedby="emailHelp" value="@Model.aPaterno @Model.aMaterno @Model.nombres1 @Model.nombres2" disabled>
                            </div> *@

                            <div class="mb-3">
                                <label for="email" class="form-label">Correo</label>
                                <input type="text" class="form-control" id="email" aria-describedby="emailHelp" value="@Model.Email" disabled>
                            </div>

                            <div class="mb-3">
                                <label for="comboRoles" class="form-label">Rol</label>
                                <select class="form-select" aria-label="Default select example" id="comboRoles">

                                    @foreach (var item in roles)
                                    {
                                        if(@Model.rol==@item.Id)
                                        {
                                            <option value="@item.Id" selected>@item.Name</option>
                                        }else{
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Estado</label>
                                @if (Model.LockoutEnabled)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radioDefault" id="radioDefault1" checked>
                                        <label class="form-check-label" for="radioDefault1">
                                            Activo
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radioDefault" id="radioDefault2">
                                        <label class="form-check-label" for="radioDefault2">
                                            inactivo
                                        </label>
                                    </div>
                                }else{
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radioDefault" id="radioDefault1">
                                        <label class="form-check-label" for="radioDefault1">
                                            Activo
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="radioDefault" id="radioDefault2" checked>
                                        <label class="form-check-label" for="radioDefault2">
                                            inactivo
                                        </label>
                                    </div>
                                }

                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">

        <div class="row">

            <div class="col-6">
                <input class="btn btn-danger" id="_botonTransferir" value="Cancelar" onclick="_cancelarRegistro()" />
            </div>

            <div class="col-6">
                <input  class="btn btn-primary" id="_botonTransferir" value="Actualizar" onclick="_actualizarRegistro()" />
            </div>

        </div>


    </div>
</div>



