
@model List<resumenCajerosPagos>;
@{
    ViewData["Title"] = "modalResumenCajeros";
    int contador = 0;
    InstitucionSede sede = ViewBag.sede;
}


<div class="modal-content">
    <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Resumen de Transacciones Pendientes de @sede.Sede</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="container row">

            <ul class="list-group">

                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item.cajeroNombres
                        <span class="badge bg-primary rounded-pill">@item.cuentaPagos</span>
                    </li>

                    contador=@item.cuentaPagos+@contador;
                }

                <li class="list-group-item d-flex justify-content-between align-items-center mt-3">
                    Total
                    <span class="badge bg-danger rounded-pill">@contador</span>
                </li>
               
            </ul>

        </div>
        

    </div>
    <div class="modal-footer">

        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>

    </div>
</div>





