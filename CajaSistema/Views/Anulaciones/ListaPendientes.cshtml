@model List<ListaEliminarAumno>
@{
    ViewData["Title"] = "ListaPendientesAnulaciones";
    int contador = 1;

    PersonaPersona persona = ViewBag.persona;
}
<div class="container">

    <div class="col-12 mb-3">
        <h4>Lista de pagos de: @persona.ApellidoPaterno @persona.ApellidoMaterno @persona.Nombres1 @persona.Nombres2</h4>
        <h4>DNI: @persona.DNI</h4>

    </div>

    <div class="col-12 mb-3">
        <table class="table table-hover" id="tablaPagos" style="height:100% !important">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id Transaccion</th>
                    <th scope="col">Tipo Pago</th>
                    <th scope="col">Curso</th>
                    <th scope="col">Fecha Envio</th>
                    <th scope="col">Hora Envio</th>
                    <th scope="col">Periodo</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Cajero</th>
                    <th scope="col">Eliminado</th>
                    <th scope="col">Sistema de Caja</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@contador</th>
                        <td>@item.IdTransaccionesTransacciones</td>
                        <td>@item.tipoPago</td>
                        <td>@item.curso</td>
                        <td>@item.fechaEnvio</td>
                        <td>@item.horaEnvio</td>
                        <td>@item.periodo</td>

                        @if (item.estado)
                        {
                            <td><span class="badge bg-success">Procesado</span></td>
                        }
                        else
                        {
                            <td><span class="badge bg-danger">En Proceso</span></td>
                        }
                        <td>@item.cajeroDatos</td>

                        @if (item.eliminado)
                        {
                            <td><span class="badge bg-info">Eliminado</span></td>
                            
                        }
                        else
                        {
                            <td><span class="badge bg-success">No eliminado</span></td>

                        }
                        <td>@item.cajaPagos</td>

                        @if (item.eliminar)
                        {
                            <td>
                                <a class="btn btn-dark" onclick="eliminarTransaccion(@item.IdTransaccionesTransacciones)">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                                    </svg>
                                </a>

                            </td>
                        }else{
                            <td>
                               

                            </td>
                        }

                       

                    </tr>
                    contador++;
                }

            </tbody>
        </table>
    </div>
</div>


